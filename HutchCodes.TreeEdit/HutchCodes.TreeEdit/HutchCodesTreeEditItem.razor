<li role="treeitem">
    <div>
        @if (Node.Nodes.Count > 0)
        {
            @if (Node.IsExpanded)
            {
                <span class="oi oi-chevron-bottom" @onclick="ToggleExpandCollapse"></span>
            }
            else
            {
                <span class="oi oi-chevron-right" @onclick="ToggleExpandCollapse"></span>
            }
        }
        <span class="k-in ">
            <span class="@Node.IconClass"></span>
            @Node.Text
        </span>
        @if (Node.IsExpanded)
        {
            <ul style="list-style:none" role="group">
                @foreach (var n in Node.Nodes)
                {
                    <HutchCodesTreeEditItem Node="n" />
                }
            </ul>
        }
    </div>
</li>
